#!/usr/bin/env bash
# Install and setup nginx server

sudo apt-get -y update
sudo apt-get -y install nginx
sudo service nginx start
replace="\\\trewrite ^/redirect_me https://www.youtube.com/watch?v=QH2-TGUlwu4 permanent;"
replace2="error_page 404 /custom_404.html;
sudo sed -i "29i $replace" /etc/nginx/sites-available/default
sudo sed -i "30i $replace2" /etc/nginx/sites-available/default
sudo echo "Ceci n'est pas une page" > /var/www/html/custom_404.html
sudo service nginx restart
sudo service nginx reload
